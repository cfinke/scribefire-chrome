{
	"name": "ScribeFire",
	"version": "0.1.0.1",
	"description": "A full-featured blog editor that integrates with your browser and lets you easily post to your blog.",
	"background_page": "background.html",
	"browser_action": {
		"default_icon" : "skin/icon.png"
	},
	"permissions": [
		"http://*/",
		"https://*/",
		"tabs"
	],
	"content_scripts": [
		{
			"matches": ["http://*/", "https://*/"],
			"js": ["content_helper.js"]
		}
	],
	"update_url": "http://www.chrisfinke.com/files/updaters/scribefire-chrome.xml"
}