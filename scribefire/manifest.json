{
	"name": "ScribeFire",
	"version": "1.0.0.0",
	"description": "A full-featured blog editor that integrates with your browser and lets you easily post to your blog.",
	
	"icons": {
		"48": "skin/icon-48.png",
		"128": "skin/icon.png"
	},
	
	"background_page": "background.html",
	"browser_action": {
		"default_icon" : "skin/icon.png"
	},
	"permissions": [
		"http://*/",
		"https://*/",
		"tabs"
	],
	"content_scripts": [
		{
			"matches": ["http://*/", "https://*/"],
			"js": ["content_helper.js"]
		}
	]
}